package = libcurl

headers = curl/curl.h
linkerOpts =  -lz -lssl -lcrypto -lcurl

linkerOpts.linux =      -lssl -lcrypto -lcurl
linkerOpts.android =      -lssl -lcrypto -lcurl
linkerOpts.macos  =      -lssl -lcrypto -lcurl

compilerOpts.macos_arm64 = -Ibuild/kotlinxtras/curl/macosArm64/include \
	-I/usr/local/kotlinxtras/libs/curl/macosArm64/include  \
	-Ibuild/kotlinxtras/openssl/macosArm64/include \
    	-I/usr/local/kotlinxtras/libs/openssl/macosArm64/include  \

linkerOpts.macos_arm64 = -Lbuild/kotlinxtras/curl/macosArm64/lib \
	-L/usr/local/kotlinxtras/libs/curl/macosArm64/lib  \
	-Lbuild/kotlinxtras/openssl/macosArm64/lib \
    	-L/usr/local/kotlinxtras/libs/curl/openssl/lib

libraryPaths.macos_arm64 = build/kotlinxtras/curl/macosArm64/lib \
	/usr/local/kotlinxtras/libs/curl/macosArm64/lib \
	build/kotlinxtras/openssl/macosArm64/lib \
    	/usr/local/kotlinxtras/libs/openssl/macosArm64/lib

compilerOpts.macos_x64 = -Ibuild/kotlinxtras/curl/macosX64/include \
	-I/usr/local/kotlinxtras/libs/curl/macosX64/include \
	-Ibuild/kotlinxtras/openssl/macosX64/include \
    	-I/usr/local/kotlinxtras/libs/openssl/macosX64/include

compilerOpts.linux_arm64 = -I/usr/local/kotlinxtras/libs/openssl/lib/linuxArm64/include  \
    -I /usr/local/kotlinxtras/libs/curl/lib/linuxArm64/include \
    -I build/kotlinxtras/curl/linuxArm64/include \
    -I build/kotlinxtras/openssl/linuxArm64/include

compilerOpts.linux_arm32_hfp = -I/usr/local/kotlinxtras/libs/openssl/lib/linuxArm32Hfp/include  \
    -I /usr/local/kotlinxtras/libs/curl/lib/linuxArm32Hfp/include \
    -I build/kotlinxtras/curl/linuxArm32Hfp/include \
    -I build/kotlinxtras/openssl/linuxArm32Hfp/include

compilerOpts.linux_x64 = -I/usr/local/kotlinxtras/libs/openssl/lib/linuxX64/include  \
    -I /usr/local/kotlinxtras/libs/curl/lib/linuxX64/include \
    -I build/kotlinxtras/curl/linuxX64/include \
    -I build/kotlinxtras/openssl/linuxX64/include

compilerOpts.android_x86 = -I/usr/local/kotlinxtras/libs/openssl/lib/androidNativeX86/include  \
    -I /usr/local/kotlinxtras/libs/curl/lib/androidNativeX86/include \
    -I build/kotlinxtras/curl/androidNativeX86/include \
    -I build/kotlinxtras/openssl/androidNativeX86/include

compilerOpts.android_x64 = -I/usr/local/kotlinxtras/libs/openssl/lib/androidNativeX64/include  \
    -I /usr/local/kotlinxtras/libs/curl/lib/androidNativeX64/include \
    -I build/kotlinxtras/curl/androidNativeX64/include \
    -I build/kotlinxtras/openssl/androidNativeX64/include

compilerOpts.android_arm32 = -I/usr/local/kotlinxtras/libs/openssl/lib/androidNativeArm32/include  \
    -I /usr/local/kotlinxtras/libs/curl/lib/androidNativeArm32/include \
    -I build/kotlinxtras/curl/androidNativeArm32/include \
    -I build/kotlinxtras/openssl/androidNativeArm32/include

compilerOpts.android_arm64 = -I/usr/local/kotlinxtras/libs/openssl/lib/androidNativeArm64/include  \
    -I /usr/local/kotlinxtras/libs/curl/lib/androidNativeArm64/include \
    -I build/kotlinxtras/curl/androidNativeArm64/include \
    -I build/kotlinxtras/openssl/androidNativeArm64/include

linkerOpts.linux_arm64 = -L/usr/local/kotlinxtras/libs/openssl/linuxArm64/lib \
    -L/usr/local/kotlinxtras/libs/curl/linuxArm64/lib \
    -Lbuild/kotlinxtras/curl/linuxArm64/lib \
    -Lbuild/kotlinxtras/openssl/linuxArm64/lib

linkerOpts.linux_arm32_hfp = -L/usr/local/kotlinxtras/libs/openssl/linuxArm32Hfp/lib \
    -L/usr/local/kotlinxtras/libs/curl/linuxArm32Hfp/lib \
    -Lbuild/kotlinxtras/curl/linuxArm32Hfp/lib \
    -Lbuild/kotlinxtras/openssl/linuxArm32Hfp/lib

linkerOpts.linux_x64 = \
    -L/usr/local/kotlinxtras/libs/openssl/linuxX64/lib \
    -L/usr/local/kotlinxtras/libs/curl/linuxX64/lib \
    -Lbuild/kotlinxtras/curl/linuxX64/lib \
    -Lbuild/kotlinxtras/openssl/linuxX64/lib

linkerOpts.android_x86 = \
    -L/usr/local/kotlinxtras/libs/openssl/androidNativeX86/lib \
    -L/usr/local/kotlinxtras/libs/curl/androidNativeX86/lib \
    -Lbuild/kotlinxtras/curl/androidNativeX86/lib \
    -Lbuild/kotlinxtras/openssl/androidNativeX86/lib

linkerOpts.android_x64 = \
    -L/usr/local/kotlinxtras/libs/openssl/androidNativeX64/lib \
    -L/usr/local/kotlinxtras/libs/curl/androidNativeX64/lib \
    -Lbuild/kotlinxtras/curl/androidNativeX64/lib \
    -Lbuild/kotlinxtras/openssl/androidNativeX64/lib


linkerOpts.android_arm32 = \
    -L/usr/local/kotlinxtras/libs/openssl/androidNativeArm32/lib \
    -L/usr/local/kotlinxtras/libs/curl/androidNativeArm32/lib \
    -Lbuild/kotlinxtras/curl/androidNativeX32/lib \
    -Lbuild/kotlinxtras/openssl/androidNativeX32/lib

linkerOpts.android_arm64 = \
    -L/usr/local/kotlinxtras/libs/openssl/androidNativeArm64/lib \
    -L/usr/local/kotlinxtras/libs/curl/androidNativeArm64/lib \
    -Lbuild/kotlinxtras/curl/androidNativeArm64/lib \
    -Lbuild/kotlinxtras/openssl/androidNativeArm64/lib


compilerOpts.linux =         -I/usr/include/curl \
                             -I/usr/include/x86_64-linux-gnu/curl \
                             -I/opt/homebrew/opt/curl/include/curl

linkerOpts.mingw_x64 =       -lcurl \
                             -L/usr/lib64 \
                             -L/usr/lib/x86_64-linux-gnu \
                             -L/opt/local/lib \
                             -L/usr/local/opt/curl/lib \
                             -L/opt/homebrew/opt/curl/lib \
                             -LC:/msys64/mingw64/lib \
                             -LC:/Tools/msys64/mingw64/lib \
                             -LC:/Tools/msys2/mingw64/lib

compilerOpts.mingw_x64 =     -I/usr/include/curl \
                             -I/usr/include/x86_64-linux-gnu/curl \
                             -I/opt/homebrew/opt/curl/include/curl
