package = libcurl
headers = curl.h
headersFilter = *
linkerOpts =  -lz -lssl -lcrypto -lcurl

linkerOpts.linux =      -lssl -lcrypto -lcurl
linkerOpts.android =      -lssl -lcrypto -lcurl
linkerOpts.macos  =      -lssl -lcrypto -lcurl

compilerOpts.linux_arm32_hfp = -Ibuild/kotlinxtras/curl/linuxArm32Hfp/include/curl \
	-Ibuild/kotlinxtras/openssl/linuxArm32Hfp/include/ \
	-I/usr/local/kotlinxtras/libs/curl/linuxArm32Hfp/include/curl \
	-I/usr/local/kotlinxtras/libs/openssl/linuxArm32Hfp/include/ 
linkerOpts.linux_arm32_hfp = -Lbuild/kotlinxtras/curl/linuxArm32Hfp/lib \
	-Lbuild/kotlinxtras/openssl/linuxArm32Hfp/lib \
	-L/usr/local/kotlinxtras/libs/curl/linuxArm32Hfp/lib \
	-L/usr/local/kotlinxtras/libs/openssl/linuxArm32Hfp/lib 
libraryPaths.linux_arm32_hfp = build/kotlinxtras/curl/linuxArm32Hfp/lib \
	build/kotlinxtras/openssl/linuxArm32Hfp/lib \
	/usr/local/kotlinxtras/libs/curl/linuxArm32Hfp/lib \
	/usr/local/kotlinxtras/libs/openssl/linuxArm32Hfp/lib 

