package = libcurl
headers = curl.h
headerFilter = *

linkerOpts.osx =             -lcurl \
                             -L/usr/lib64 \
                             -L/usr/lib/x86_64-linux-gnu \
                             -L/opt/local/lib \
                             -L/usr/local/opt/curl/lib \
                             -L/opt/homebrew/opt/curl/lib

compilerOpts.osx =           -I//\
                             -I/opt/local/include/curl \
                             -I/usr/bin/curl \
                             -I/usr/local/include/curl \
                             -I/usr/include/curl \
                             -I/usr/local/Cellar/curl/7.83.1/include/curl \
                             -I/usr/local/Cellar/curl/7.81.0/include/curl \
                             -I/usr/local/Cellar/curl/7.80.0_1/include/curl \
                             -I/usr/local/Cellar/curl/7.80.0/include/curl \
                             -I/usr/local/Cellar/curl/7.62.0/include/curl \
                             -I/usr/local/Cellar/curl/7.63.0/include/curl \
                             -I/usr/local/Cellar/curl/7.65.3/include/curl \
                             -I/usr/local/Cellar/curl/7.66.0/include/curl \
                             -I/opt/homebrew/opt/curl/include/curl

linkerOpts.linux =           -lcurl

compilerOpts.linux_arm64 = -I../../libs/openssl/dan_OpenSSL_1_1_1q/lib/linuxArm64/include  \
    -I ../../../../libs/curl/curl-7_85_0/lib/linuxArm64/include

compilerOpts.linux_arm32_hfp = -I../../libs/openssl/dan_OpenSSL_1_1_1q/lib/linuxArm32Hfp/include  \
    -I ../../../../libs/curl/curl-7_85_0/lib/linuxArm32Hfp/include

linkerOpts.linux_arm64 =  -lssl -lcrypto -lcurl \
    -L/usr/lib/aarch64-linux-gnu/ \
    -L/usr/local/kotlinxtras/libs/curl/curl-7_85_0/linuxArm64/lib

linkerOpts.linux_arm32_hfp = -lssl -lcrypto -lcurl \
    -L/usr/lib/arm-linux-gnueabihf  \
    -L/usr/local/kotlinxtras/libs/openssl/dan_OpenSSL_1_1_1q/linuxArm32Hfp/lib \
    -L/usr/local/kotlinxtras/libs/curl/curl-7_85_0/linuxArm32Hfp/lib


compilerOpts.linux =         -I/usr/include/curl \
                             -I/usr/include/x86_64-linux-gnu/curl \
                             -I/opt/homebrew/opt/curl/include/curl

linkerOpts.mingw_x64 =       -lcurl \
                             -L/usr/lib64 \
                             -L/usr/lib/x86_64-linux-gnu \
                             -L/opt/local/lib \
                             -L/usr/local/opt/curl/lib \
                             -L/opt/homebrew/opt/curl/lib \
                             -LC:/msys64/mingw64/lib \
                             -LC:/Tools/msys64/mingw64/lib \
                             -LC:/Tools/msys2/mingw64/lib

compilerOpts.mingw_x64 =     -I/usr/include/curl \
                             -I/usr/include/x86_64-linux-gnu/curl \
                             -I/opt/homebrew/opt/curl/include/curl
